<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.example.wlsxo.checkmate.StateRoomActivity">

    <LinearLayout
        android:id="@+id/rmlist_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_sex"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rmlist_2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rmlist_title"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="방 제목:"
            android:textSize="16dp"
            android:enabled="false"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/numofperson"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="인원 수:"
            android:textSize="16dp"
            android:enabled="false"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rmlist_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical">
        <!--TODO  이 버튼 클릭시 stateroom_dialog2.xml 화면띄우기-->
        <Button
            android:id="@+id/room_add2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/details"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rmlist_4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="상태"
            android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>