<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createroom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--TODO 수정-->
    <TextView
        android:id="@+id/textview_roomtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 제목 : "
        android:textSize="20dp"/>
    <!--TODO 수정-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_roomtitle"
        android:id="@+id/layout_imagedialog"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewdialog1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher_background"
            />

        <ImageView
            android:id="@+id/imageViewdialog2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher_background"
            />

        <ImageView
            android:id="@+id/imageViewdialog3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher_background"
            />

        <ImageView
            android:id="@+id/imageViewdialog4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher_background"
            />
    </LinearLayout>

    <!--TODO 수정-->
    <TextView
        android:id="@+id/textview_commenttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[내용]"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_imagedialog"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/textview_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실험용 데이터 실험용 데이터 실험용 데이터 실험용 데이터 실험용 데이터 실험용 데이터 실험용 데이터 실험용 데이터 "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textview_commenttitle"
        android:gravity="center"
        />
    <!--TODO 수정-->

    <Button
        android:id="@+id/dialog_ok"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="확인"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/textview_comment"
        />

    <Button
        android:id="@+id/dialog_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dialog_ok"
        android:text="나가기"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textview_comment"
        />
</RelativeLayout>